<body class="homepage">
<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-17788063-2', 'auto');
    ga('send', 'pageview');

</script>
<div id="page-wrapper">

  <!-- Nav -->
  <%= render template: 'layouts/header' %>

  <div id="main-wrapper">
    <div id="main" class="container">
      <div class="row" style="padding-bottom:0px;">
        <!-- メインコンテンツ １カラム or ２カラム ここから -->

        <div class="12u 12u(mobile) important(mobile)">
          <div class="content content-right">
            <div class="pankuzu_div">
              <div class="pankuzu_in"><%= link_to 'HOME', root_path %>　＞　<%= link_to '大会一覧', tournaments_path %>　＞　<%= @tournament.title %></div>
            </div>
            <br>
            <h1 class="common"><%= @tournament.title %> 大会情報</h1>

            <table class="tableList">
              <tr><th class="leftyose">大会名</th></tr>
              <tr><td><%= @tournament.title %></td></tr>
              <tr><th class="leftyose">開催日</th></tr>
              <tr><td><%= @tournament.date.strftime('%Y/%m/%d') %></td></tr>
              <tr><th class="leftyose">開催場所</th></tr>
              <tr><td><%= @tournament.place %></td></tr>
              <tr><th class="leftyose">大会詳細</th></tr>
              <tr><td><%= STAGE[@tournament.stage][0] %></td></tr>
              <tr><th class="leftyose">登録日時</th></tr>
              <tr><td><%= @tournament.created_at.strftime('%Y/%m/%d %H:%M') %></td></tr>
              <tr><th class="leftyose">更新日時</th></tr>
              <tr><td><%= @tournament.updated_at.strftime('%Y/%m/%d %H:%M') %></td></tr>
            </table>

            <h1 class="common">登録されたデッキ</h1>

            <div class="scrollbox">
              <table class="tableList" style="min-width: 666px;font-size: 12px;" id="search_result">
                <tr>
                  <th width="260"><a href="https://yugioh-list.com/decks/index/sort:deck_nm/direction:desc" class="normal">デッキ名</a></th>
                  <th width="185"><a href="https://yugioh-list.com/decks/index/sort:theme_ctgry/direction:desc" class="normal">カテゴリ</a></th>
                  <th width="130"><a href="https://yugioh-list.com/decks/index/sort:User.user_nm/direction:desc" class="normal">ユーザ名</a></th>
                  <th width="50"><a href="https://yugioh-list.com/decks/index/sort:total_point/direction:desc" class="normal">コメント数</a></th>
                  <th width="60"><a href="https://yugioh-list.com/decks/index/sort:Deck.created/direction:desc" class="normal">投稿日</a></th>
                </tr>

                <% @tournament.tournament_decks.all.each do |tournament_deck| %>
                  <tr>
                    <td width="230" ><%= link_to tournament_deck.deck.name, deck_path(tournament_deck.deck) %>　<%= new_font tournament_deck.deck %> </td>
                    <td width="185"><a href="https://yugioh-list.com/decks/index/s:1/theme_ctgry:268/"><%= tournament_deck.deck.category.name %></a></td>
                    <td width="130"><%= link_to tournament_deck.deck.user.name, user_path(tournament_deck.deck.user) %> </td>
                    <td width="50" class="rightyose"><%= tournament_deck.deck.deck_comments.count %></td>
                    <td width="100"><%= tournament_deck.deck.created_at.strftime('%Y/%m/%d %H:%M')  %></td>
                  </tr>
                <% end %>

              </table>
            </div>
          </div>
        </div>
        <!-- 2カラム -->						<!-- メインコンテンツ １カラム or ２カラム ここまで -->
      </div>
    </div>
  </div>
  <!-- /Main -->

  <!-- Footer -->
  <%= render template: 'layouts/footer' %>

  <!-- Scripts -->
  <script src="/assets/js/jquery.min.js"></script>
  <script src="/assets/js/jquery.dropotron.min.js"></script>
  <script src="/assets/js/skel.min.js"></script>
  <script src="/assets/js/skel-viewport.min.js"></script>
  <script src="/assets/js/util.js"></script>
  <script src="/assets/js/main.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js" type="text/javascript"></script>
  <script src="/assets/js/base.js"  type="text/javascript"></script>
  <script type="text/javascript">baseStart();</script>
</div>
</body>